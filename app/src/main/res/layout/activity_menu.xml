<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9"
    tools:context=".menu">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="-210dp"
        android:background="@drawable/white_circle_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menu_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/alike"
        android:text="Categories"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menu_home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/hime"
        app:layout_constraintStart_toEndOf="@+id/menu_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mennu_cart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/cart"
        app:layout_constraintStart_toEndOf="@+id/menu_home"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toEndOf="@+id/mennu_cart"
        app:layout_constraintTop_toTopOf="parent"/>


        <RelativeLayout
            android:id="@+id/burger_layout"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/item_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView11">

            <ImageView
                android:layout_width="145dp"
                android:layout_height="131dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="63dp"
                android:src="@drawable/b3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:text="Burger"
                android:textColor="@color/black"
                android:textSize="30sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rice_layout"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/item_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView11">

            <ImageView
                android:layout_width="167dp"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-34dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginBottom="34dp"
                android:src="@drawable/mainrice" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:text="Rice"
                android:textColor="@color/black"
                android:textSize="30sp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/beverages_layout"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/item_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/burger_layout">

            <ImageView
                android:layout_width="127dp"
                android:layout_height="127dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="67dp"
                android:src="@drawable/main_beve" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:text="Beverages"
                android:textColor="@color/black"
                android:textSize="30sp" />


        </RelativeLayout>

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/white_circle_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-70dp"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:text="Rate US"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        android:background="@drawable/login_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>